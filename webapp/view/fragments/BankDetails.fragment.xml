<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel id="pAccountDetails" expandable="false" headerText="Account Details" width="auto" class="sapUiResponsiveMargin">
        <content>
            <HBox id="hBox4">
                <Avatar id="aUserProfile" src="" displaySize="XL" showBorder="true" press="onPress"/>
                <VBox id="vBox1" binding="{/accountDetails}" class="sapUiSmallMargin sapUiLargeMarginBegin">
                    <!-- <Title text="{i18n>accDetails}" id="AccDetails" level="H1"/> -->
                    <!-- Element Binding binding="{/accountDetails}" -->
                    <HBox id="hBox1">
                        <Label text="{i18n>accNum}" id="bankAccNum" />
                        <Text text="{AccountNum}" id="bankAccVal" class="sapUiSmallMarginBegin" />
                    </HBox>
                    <HBox id="hBox2">
                        <Label text="{i18n>accUser}" id="userName" />
                        <Text text="{Name}" id="userNameVal" class="sapUiSmallMarginBegin" />
                    </HBox>
                    <HBox id="hBox3">
                        <Label text="{i18n>ifsCode}" id="ifsCode" />
                        <Text text="{Ifsc}" id="ifsCodeVal" class="sapUiSmallMarginBegin" />
                    </HBox>
                    <Button id="openBankDetails" type="Neutral" text="{i18n>findMoreBtn}" press=".onOpenBankDetails"/>
                </VBox>
            </HBox>
        </content>
    </Panel>

</core:FragmentDefinition>