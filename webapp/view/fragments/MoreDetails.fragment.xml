<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">


    <Dialog id="moreBankDetails" title="{i18n>moreAccDetails}">
        <VBox id="vBox1" binding="{/accountDetails}" class="sapUiSmallMargin">

            <HBox id="hBox1">
                <Label text="{i18n>accNum}" id="bankAccNum" />
                <Text text="{AccountNum}" id="bankAccVal" class="sapUiSmallMarginBegin" />
            </HBox>
            <HBox id="hBox2">
                <Label text="{i18n>accUser}" id="userName" />
                <Text text="{Name}" id="userNameVal" class="sapUiSmallMarginBegin" />
            </HBox>
            <HBox id="hBox3">
                <Label text="{i18n>ifsCode}" id="ifsCode" />
                <Text text="{Ifsc}" id="ifsCodeVal" class="sapUiSmallMarginBegin" />
            </HBox>
            <HBox id="hBox4">
                <Label text="{i18n>accAddress}" id="address" />
                <Text text="{Addr}" id="addressVal" class="sapUiSmallMarginBegin" />
            </HBox>
            <HBox id="hBox5">
                <Label text="{i18n>accCity}" id="city" />
                <Text text="{City}" id="cityVal" class="sapUiSmallMarginBegin" />
            </HBox>
            <HBox id="hBox6">
                <Label text="{i18n>accPostal}" id="postalCode" />
                <Text text="{PosC}" id="postalCodeVal" class="sapUiSmallMarginBegin" />
            </HBox>
        </VBox>

        <beginButton>
            <Button id="closeBtn" text="Close" press=".onCloseBankDetails"/>
        </beginButton>


    </Dialog>


</core:FragmentDefinition>    